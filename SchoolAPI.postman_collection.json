{
  "info": {
    "name": "School Management API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Add School",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Greenfield School\",\n  \"address\": \"123 Park Lane\",\n  \"latitude\": 12.9716,\n  \"longitude\": 77.5946\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/addSchool",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "addSchool"
          ]
        }
      }
    },
    {
      "name": "List Schools",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/listSchools?lat=12.9716&lng=77.5946",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "listSchools"
          ],
          "query": [
            {
              "key": "lat",
              "value": "12.9716"
            },
            {
              "key": "lng",
              "value": "77.5946"
            }
          ]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000"
    }
  ]
}